    public JTrackFinder(DoubPoint inputData[],int xWidth,int yWidth)
    {
        initComponents();
        
        Container container = getContentPane();
        container.setLayout( new BorderLayout() );
        
        myPlotPanel = new PlotPanel(inputData);
        myPlotPanel.setBackground(Color.white);
        myPlotPanel.setPreferredSize(new Dimension(xWidth,yWidth));
        
        JScrollPane plotScroller = new JScrollPane(myPlotPanel);
	//plotScroller.setPreferredSize(new Dimension(800,800));
        //plotScroller.setHorizontalScrollBarPolicy(JScrollPane.HORIZONTAL_SCROLLBAR_ALWAYS);
        //plotScroller.setVerticalScrollBarPolicy(JScrollPane.VERTICAL_SCROLLBAR_ALWAYS);
         
        JPanel controlPanel = new JPanel();

	JScrollPane controlScroller = new JScrollPane(controlPanel);
		
	
        JSplitPane splitPane = new JSplitPane(JSplitPane.HORIZONTAL_SPLIT,plotScroller, controlScroller);
        splitPane.setDividerLocation(xWidth);
        splitPane.setDividerSize(8);
        splitPane.setOneTouchExpandable(true);
                
        
        //container.add(myPlotPanel);
        container.add(splitPane);
        setSize(xWidth + 200, yWidth);
        setVisible(true);
        
        //container.add(myPlotPanel);
